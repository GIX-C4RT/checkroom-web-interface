{% extends 'base.html.jinja' %}

{% block header %}
    <h1>{% block title %}Items{% endblock %}</h1>
    <a class="action" href="{{ url_for('admin.create') }}">New Item</a>
{% endblock %}

{% block content %}
    <table>
        <tr>
            <th>Item</th>
            <th>Description</th>
            <th>Borrower</th>
            <th>Update</th>
        </tr>
    {% for item in items %}
        <tr>
            <td>{{ item["name"] }}</td>
            <td>{{ item["description"] }}</td>
            <td>{{ item["username"] }}</td>
            <td><a class="action" href="{{ url_for('admin.update', id=item['id']) }}">Edit</a></td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
{% macro list_items(items) %}
<table>
    <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Select</th>
    </tr>
{% for item in items %}
    <tr>
        <td>{{ item["name"] }}</td>
        <td>{{ item["description"] }}</td>
        <td>
            <input type="radio" name="id" value="{{ item['id'] }}" required>
        </td>
    </tr>
    {% endfor %}
</table>
{% endmacro %}

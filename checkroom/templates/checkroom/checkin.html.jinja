{% extends 'base.html.jinja' %}

{% block header %}
    <h1>{% block title %}Checkin{% endblock %}</h1>
{% endblock %}

{% block content %}
    {% if True %} {# change to if items#}
    <form action="{{ url_for('checkroom.checkin') }}" method="post">
        {% include "checkroom/item_list.html.jinja" %}
        <input type="submit" value="Checkin" onclick="return confirm('Are you sure?');">
    </form>
    {% else %}
    <span>You have no outstanding items</span>
    {% endif %}
{% endblock %}
